<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/colorWhite"
    tools:context=".activities.EventDescriptionActivity">


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/colorPrimaryLight1">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:baselineAligned="false">




            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                >

                <TextView
                    android:id="@+id/tvEventDate"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="01.01.16"
                    style="@style/event_dateTime"

                    />

                <TextView
                    android:id="@+id/tvEventTime"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="12:34"
                    style="@style/event_dateTime"
                    />

                <ImageView
                    android:id="@+id/ivEventType"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Right Icon"
                    android:src="@drawable/bike"
                    android:layout_margin="5dp" />


            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                >

                <TextView
                    android:id="@+id/tvEventStart"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Start"
                    style="@style/event_startEnd"
                    />

                <TextView
                    android:id="@+id/tvEventMiddle"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.2"
                    android:text="-"
                    android:gravity="center"

                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimary" />



                <TextView
                    android:id="@+id/tvEventEnd"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Finish"
                    style="@style/event_startEnd"
                    />


            </LinearLayout>


        </LinearLayout>

        <ImageButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/imageButton"
            android:src="@drawable/map_marker"
            android:scaleType="centerCrop"
            android:background="@color/colorPrimaryLight1"
            android:layout_margin="5dp"
            android:onClick="eventDescMapButtonPressed"
            android:backgroundTint="@color/colorPrimaryLight2" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tvEventDescription"
        android:layout_margin="5dp"
        android:textColor="@color/colorBlack"
        android:text="Some event description text.... bla asöflkjlk sfdölasleökf dsnf ölaskjef lk sdfölakjsefhasd kf asklfhjaslkjf dsaklsklaf laksjhalseufh kklasjfhakls fhlkaes kusd aölskfja sldfkja södflkjas elöfkjalös dkjfölkajse flökajsflökasjefl öaksglöjahs gkajsegö"
        android:contextClickable="false"
        android:padding="5dp"
        android:textSize="20sp"
        android:maxLines="5"
        android:scrollbars = "vertical"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/these_people_are_participating"
        android:id="@+id/tvEventParticipating"
        android:textSize="20sp"
        android:layout_margin="5dp"
        />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lvPersonsInEvent" />


</LinearLayout>
