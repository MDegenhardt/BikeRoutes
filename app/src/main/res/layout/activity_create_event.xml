<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".activities.CreateEventActivity">


    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:gravity="center"
        android:baselineAligned="false">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rbBike"
            android:drawableRight="@drawable/bike_small"
            android:checked="true"
            android:layout_marginRight="30dp" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rbHike"
            android:drawableRight="@drawable/hike_small"
            android:layout_marginRight="30dp" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rbRun"
            android:drawableRight="@drawable/running_small" />
    </RadioGroup>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:text="Specify:"
        android:id="@+id/tvEventSpecify"
        android:layout_weight="0.5"
        android:textColor="@color/colorPrimaryDark2"
        android:textSize="20sp" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:weightSum="1">

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Date: 01.02.2016"
            android:id="@+id/btnEventDate"
            android:onClick="showDatePickerDialog"
            style="@style/date_time_button" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Time: 12:34"
            android:id="@+id/btnEventTime"
            android:onClick="showTimePickerDialog"
            style="@style/date_time_button"
            />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/colorPrimaryLight1"
        android:layout_margin="5dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:baselineAligned="false">


            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Start:"
                    style="@style/event_startEnd"
                    />


                <TextView
                    android:id="@+id/tvEventStart"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:text="Some Address"
                    style="@style/event_startEnd"
                    />


            </LinearLayout>


        </LinearLayout>

        <ImageButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.7"
            android:id="@+id/btnStartLocation"
            android:src="@drawable/map_marker"
            android:scaleType="centerInside"
            android:background="@color/colorPrimaryLight1"
            android:layout_margin="2dp" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/colorPrimaryLight1"
        android:layout_margin="5dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:baselineAligned="false">


            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="End:"
                    style="@style/event_startEnd"
                    />


                <TextView
                    android:id="@+id/tvEventEnd"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:text="Some other Address"
                    style="@style/event_startEnd"
                    />


            </LinearLayout>


        </LinearLayout>

        <ImageButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.7"
            android:id="@+id/btnEndLocation"
            android:src="@drawable/map_marker"
            android:scaleType="centerInside"
            android:background="@color/colorPrimaryLight1"
            android:layout_margin="2dp" />
    </LinearLayout>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/etEventDescription"
        android:layout_weight="1"
        android:layout_margin="5dp"
        android:textColor="@color/colorBlack"
        android:hint="Add an event description..." />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text="Secret Event"
        android:id="@+id/cbSecretEvent"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:textColor="@color/colorPrimaryDark2" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:text="Create Event"
        android:id="@+id/btnCreateEvent"
        android:layout_weight="1"
        android:background="@color/colorPrimaryDark1"
        android:textSize="20sp"
        android:textColor="@color/colorAccent1" />

</LinearLayout>
